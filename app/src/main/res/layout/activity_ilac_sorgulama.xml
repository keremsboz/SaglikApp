<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ilacSorgulama">
    <ImageView
        android:id="@+id/firstScreenBackground"
        android:layout_width="418dp"
        android:layout_height="736dp"
        android:src="@drawable/firstscreenbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstScreenTitle"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="373dp"
        android:layout_height="94dp"
        android:layout_marginTop="25dp"
        android:text="Hangi İlacı Sorgulamak İstiyorsunuz?"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ilacSorgula"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:onClick="ilacSorgulaButton"
        android:text="İlaç Sorgula"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sorgulananCompText" />

    <AutoCompleteTextView
        android:id="@+id/sorgulananCompText"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        android:hint="Sorgulamak istediğiniz ilacı giriniz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstScreenTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>