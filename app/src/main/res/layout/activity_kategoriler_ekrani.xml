<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kategorilerEkrani">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/firstscreenbackground" />

    <Button
        android:id="@+id/AlerjenIlaclarim"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:onClick="alerjenlerGit"
        android:text="İlaçlarım"
        app:layout_constraintBottom_toTopOf="@+id/hapBildirim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hapBildirim"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:onClick="hapBildirimGit"
        android:text="İlaç Bildirim"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <Button
        android:id="@+id/asiTakvimi"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:onClick="asiTakvimiGit"
        android:text="Aşı Takvimi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hapBildirim" />
</androidx.constraintlayout.widget.ConstraintLayout>